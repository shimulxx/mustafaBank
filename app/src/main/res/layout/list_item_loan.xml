<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLoanListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <LinearLayout
            android:id="@+id/nameLinearLayoutLoanListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: " />

            <TextView
                android:id="@+id/textNameLoanListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan Name" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/initialDateLinearLayoutLoanListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameLinearLayoutLoanListItem"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initital date: " />

            <TextView
                android:id="@+id/textInitDateLoanListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initial date" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/monthlyROILinearLayoutLoanListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/initialDateLinearLayoutLoanListItem"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly ROI: " />

            <TextView
                android:id="@+id/textMonthlyROILoanListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROI" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/monthlyPaymentLinearLayoutLoanListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monthlyROILinearLayoutLoanListItem"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Payment: " />

            <TextView
                android:id="@+id/textMonthlyPaymentLoanListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Payment" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/loanAmountLinearLayoutLoanListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monthlyPaymentLinearLayoutLoanListItem"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan Amount: " />

            <TextView
                android:id="@+id/textAmountLoanListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amount" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/remainedAmountLinearLayoutLoanListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loanAmountLinearLayoutLoanListItem"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remained Amount: " />

            <TextView
                android:id="@+id/textRemainedAmountLoanListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amount" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/totalExpectedLossLinearLayoutLoanListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remainedAmountLinearLayoutLoanListItem"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total expected Loss: " />

            <TextView
                android:id="@+id/textTotalExpectedLossLoanListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="loss amount" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/finishDateLinearLayoutLoanListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalExpectedLossLinearLayoutLoanListItem"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finish date: " />

            <TextView
                android:id="@+id/textFinishDateLoanListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="finish date" />

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>